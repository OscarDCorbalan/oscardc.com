- var headTitle = 'Gulp Less Pug Skeleton'
- var headDescription = 'Skeleton to build static websties using Pug and Less, plus a live-reload webserver for faster development'

mixin homeArticle(link, title, subTitle)
	article
		a(href="/pages/" + link)
			header
				.details
					h2= title
					p= subTitle
			span.bw-wrap
				img.bw(src="http://res.cloudinary.com/oscardc/image/upload/f_auto,q_auto/v1473228387/oscardc.com/img/" + link + "/" + link + "-bw.jpg", alt=title, width=300, height=300)
			span.clr-wrap
				img.clr(src="http://res.cloudinary.com/oscardc/image/upload/f_auto,q_auto/v1473228387/oscardc.com/img/" + link + "/" + link + ".jpg", alt=title, width=300, height=300)

include ./partials/header.pug
section#portfolio
	h2#portfolio-title Proyectos
	div
		+homeArticle('sotogrande-taxi','Sotogrande Taxi','Mobile-first web')

		+homeArticle('taxi-en-alcaidesa','Taxi en Alcaidesa','Reponsive web')
		+homeArticle('geoparsing','Geoparsing','Desarrollo Java')
		+homeArticle('biwair','Biwair','Juego')
		+homeArticle('dungeon-realms','Dungeon Realms','Juego')
		+homeArticle('chromatic-td','Chromatic TD','Juego')
		+homeArticle('mancala','Mancala','Juego')
		+homeArticle('sinistra-defense','Sinistra Defense','Juego HTML5')
		+homeArticle('tierra-media','Tierra Media','Mod para NWN')
		+homeArticle('bitmaiden','Bit Maiden','Web / Wordpress')
