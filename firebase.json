{
    "hosting": {
        "public": "public",
        "redirects": [
            {
              "source": "/tags/",
              "destination": "/",
              "type": 301
            },
            {
              "source": "/categories/",
              "destination": "/",
              "type": 301
            }
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [{
                "source": "**/*.@(js|css)",
                "headers": [{
                    "key": "Cache-Control",
                    "value": "max-age=604800"
                }]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers": [{
                    "key": "Cache-Control",
                    "value": "max-age=604800"
                }]
            }
        ]
    }
}
